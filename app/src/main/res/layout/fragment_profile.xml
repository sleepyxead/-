<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Views.Fragments.ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Профиль"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/log_out_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rivLogo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_holder" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ваше имя"
            android:textSize="@dimen/_13ssp" />

        <EditText
            android:id="@+id/nametext"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:inputType="text"
            android:padding="10dp"
            android:text="Алексей"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ваша почта"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:inputType="text"
            android:padding="10dp"
            android:text="example@gmail.com"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ваш пароль"
            android:textSize="@dimen/_11ssp" />

        <EditText
            android:id="@+id/passtext"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="Password"
            android:textSize="15sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@android:color/transparent"
            android:outlineSpotShadowColor="#05A20B"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect"
                android:text="Сохранить"
                app:cornerRadius="@dimen/_15sdp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>